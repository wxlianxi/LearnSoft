<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:padding="0dp">
    <!--为继承的activity分配空间-->
    <LinearLayout
        android:id="@+id/llcontent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

    </LinearLayout>

    <!--教程显示区域-->
    <FrameLayout
        android:id="@+id/contentlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/lessonbackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/lessonupground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />

        <xxl.learn.com.photoshop.uicontrol.OblongView
            android:id="@+id/oblong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <xxl.learn.com.photoshop.uicontrol.CircleView
            android:id="@+id/circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <xxl.learn.com.photoshop.uicontrol.OblongMoveView
            android:id="@+id/oblongmove0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <xxl.learn.com.photoshop.uicontrol.OblongMoveView
            android:id="@+id/oblongmove1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <xxl.learn.com.photoshop.uicontrol.OblongMoveView
            android:id="@+id/oblongmove2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <xxl.learn.com.photoshop.uicontrol.OblongMoveView
            android:id="@+id/oblongmove3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <xxl.learn.com.photoshop.uicontrol.OblongMoveView
            android:id="@+id/oblongmove4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <xxl.learn.com.photoshop.uicontrol.DialogBoxViewLuClick
            android:id="@+id/dialogBoxLuClick"
            android:layout_width="300dp"
            android:layout_height="200dp" />

        <xxl.learn.com.photoshop.uicontrol.DialogBoxViewLu
            android:id="@+id/dialogBoxLu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>
    <!--为BaseActivity设置布局-->
    <LinearLayout
        android:id="@+id/toolslayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/ivory"
        android:alpha="0.8"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="0dp"
        android:layout_margin="0dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:layout_weight="0.1" />


        <xxl.learn.com.photoshop.uicontrol.SeekBarPerfect
            android:id="@+id/seekBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_arrow_back_black_24dp"
            android:layout_weight="0.1" />

        <ImageView
            android:id="@+id/hidetools"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_arrow_back_black_24dp"
            android:layout_weight="0.1" />

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:layout_weight="0.2" />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/showtools"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:background="@mipmap/showtools" />
    </RelativeLayout>


</FrameLayout>
